---
interface Props {
  id: string;
  className?: string;
}
const { id, className = "" } = Astro.props;
---

<section id={id} class=`section ${className}`>
  <div class="container section-container">
    <slot />
  </div>
</section>
<style>
  .section {
    width: 100%;
    height: fit-content;
    min-height: 100vh;
  }
  .section-container {
    height: 100%;
    min-height: 100vh;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
</style>
